{
  "compilerOptions": {
    "target": "es2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "nodenext",
    "skipLibCheck": true,
    "moduleResolution": "nodenext",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "paths": {
    
      "@/types": ["./types.ts"]
    }
  },
  "include": [
    "src",
    "api",
    "constants.ts",
    "types.ts"
  ],
  "exclude": ["node_modules"]
}